# =============================================================================
# Production Environment Configuration
# Copy to .env.production and fill in values
# =============================================================================

APP_NAME=Muzakily
APP_ENV=production
# Generate with: docker compose exec app php artisan key:generate --show
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Timezone
APP_TIMEZONE=UTC

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=error

# Database (credentials passed via Docker secrets)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=muzakily
DB_USERNAME=muzakily
# DB_PASSWORD is set via Docker secret

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=your-domain.com
SESSION_SECURE_COOKIE=true

# Cache
CACHE_STORE=redis

# Queue
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD is set via Docker secret

# Search
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
# MEILISEARCH_KEY is set via Docker secret

# Music Storage
MUSIC_STORAGE_DRIVER=r2

# Cloudflare R2 Settings
AWS_ACCESS_KEY_ID=your-r2-access-key
AWS_SECRET_ACCESS_KEY=your-r2-secret-key
AWS_DEFAULT_REGION=auto
AWS_BUCKET=your-bucket-name
AWS_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
AWS_USE_PATH_STYLE_ENDPOINT=true

# Unsplash (optional - for playlist covers)
UNSPLASH_ENABLED=false
UNSPLASH_ACCESS_KEY=

# Mail (for password resets, notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Trusted Proxies (for load balancer / reverse proxy)
# Replace with your actual load balancer/proxy IPs or CIDR ranges
# Examples: 10.0.0.1,10.0.0.2 or 10.0.0.0/24
TRUSTED_PROXIES=
